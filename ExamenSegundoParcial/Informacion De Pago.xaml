<UserControl x:Class="ExamenSegundoParcial.Informacion_De_Pago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamenSegundoParcial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
		<TextBlock TextAlignment="Left" Margin="10" FontFamily="Adobe Gothic Std B" FontSize="24">Numero De Tarjeta:</TextBlock>
		<TextBox Name="Tarjeta" FontFamily="Adobe Gothic Std B" FontSize="24"></TextBox>
		<TextBlock TextAlignment="Left" Margin="10" FontFamily="Adobe Gothic Std B" FontSize="24">CVV:</TextBlock>
		<TextBox Name="CVV" FontFamily="Adobe Gothic Std B" FontSize="24"></TextBox>
		<TextBlock TextAlignment="Left" Margin="10" FontFamily="Adobe Gothic Std B" FontSize="24">Mes De Expiracion:</TextBlock>
		<TextBox Name="Expiracion" FontFamily="Adobe Gothic Std B" FontSize="24"></TextBox>
		<TextBlock TextAlignment="Left" Margin="10" FontFamily="Adobe Gothic Std B" FontSize="24">Año De Expiracion:</TextBlock>
		<TextBox Name="Año" FontFamily="Adobe Gothic Std B" FontSize="24"></TextBox>
	</StackPanel>
</UserControl>
